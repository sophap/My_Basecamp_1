<figure class="text-center">
  <blockquote class="blockquote">
    <h2>Change your password</h2>
  </blockquote>
</figure>  


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, class:"form-control",placeholder:"new password", autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, class:"form-control",placeholder:"confirm new password", autocomplete: "new-password" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Change my password", class:'btn btn-secondary' %>
  </div>
<% end %>

<figure class="text-center">
  <quote class="quote">
  <%= render "devise/shared/links" %>
  </quote>
</figure>

